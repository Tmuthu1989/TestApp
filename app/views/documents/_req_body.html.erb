<div class="modal-header">
  <h4 class="modal-title">Documents -
    <%= "#{@document.document_number} (#{@document.name})"%> - Request Body
  </h4>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <div class="row">
    <div class="col-12">
      <pre id="json-code">
      </pre>      
    </div>
  </div>
</div>
<div class="modal-footer">
  <%if @document.status != AppConstants::FILE_STATUS[:success]%>
    <%= link_to xml_file_document_re_process_path(@document.xml_file_id, @document), class: "btn btn-success" do %>
      <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i>
    <% end -%>
  <% end -%>
  <button class="btn btn-success" onclick="copyContent('json-code')">Copy Request Body</button>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>