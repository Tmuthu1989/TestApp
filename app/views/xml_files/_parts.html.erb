<div class="row">
  <div class="col-12" >
    <%parts = @xml_file.parts.page(params[:page]).per(params[:per_page])%>
    <%= paginate parts, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
    <table class="table table-bordered table-striped mb-3">
      <thead>
        <tr>
          <th style="width: 20%;">Part Type</th>
          <th style="width: 20%;">Part Number</th>
          <th style="width: 20%;">Part Name</th>
          <th style="width: 20%;">Status</th>
          <th style="width: 20%;"></th>
        </tr>
      </thead>
      <tbody>
        <%parts.each do |part|%>
          <tr>
            <td><%= part.part_type%></td>
            <td><%= part.part_number%></td>
            <td><%= part.part_name%></td>
            <td><%= part.status%></td>
            <td></td>
          </tr>
        <%end%>
        
      </tbody>
    </table>
    <%= paginate parts, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
  </div>
</div>
