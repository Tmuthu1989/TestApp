<%page_name "XML Files - #{@xml_file.file_name}"%>

<div class="card card-info m-0">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%= link_to xml_files_path, class: "btn btn-sm btn-info  mb-3 float-right" do %>
          <em class="fas fa-arrow-left"></em> Back
        <%end%>
        <h3><%=@xml_file.file_name%><small>(<%=@xml_file.file_path%>)</small></h3>
      </div>
      <div class="col-12 mb-2">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link <%= 'active' if params[:type].blank? || params[:type] === 'file'%>" id="xml_file_details-tab" href='<%= "/xml_files/#{@xml_file.id}/file"%>' data-toggles="tab" data-targets="#xml_file_details" type="button" role="tab" aria-controls="home" aria-selected="true">XML File Content</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link <%= 'active' if params[:type] === 'parts'%>" id="parts-tab"  href='<%= "/xml_files/#{@xml_file.id}/parts"%>' data-toggles="tab" data-targets="#parts" type="button" role="tab" aria-controls="parts" aria-selected="false">Parts</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" style="height: 68vh; overflow: auto; overflow-x:hidden">
            <div class="row">
              <div class="col-12 no-padding" style="width:90%; ">
                <%= render params[:type] || "file"%>                
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
