<%page_name "XML Files - #{@xml_file.file_name}"%>

<div class="card card-info">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%= link_to xml_files_path, class: "btn btn-sm btn-info  mb-3 float-right" do %>
          <em class="fas fa-arrow-left"></em> Back
        <%end%>
        <h3><%=@xml_file.file_name%><small>(<%=@xml_file.file_path%>)</small></h3>
      </div>
      <div class="col-12">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="xml_file_details-tab" data-toggle="tab" data-target="#xml_file_details" type="button" role="tab" aria-controls="home" aria-selected="true">XML File Content</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="parts-tab" data-toggle="tab" data-target="#parts" type="button" role="tab" aria-controls="parts" aria-selected="false">Parts</button>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="xml_file_details" role="tabpanel" aria-labelledby="xml_file_details-tab">
            <pre>
              <%= @xml_file.file_content %>
            </pre>
          </div>
          <div class="tab-pane fade" id="parts" role="tabpanel" aria-labelledby="parts-tab">...</div>
        </div>
        
      </div>
    </div>
  </div>
</div>
