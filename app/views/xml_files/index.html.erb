<%page_name "XML Files"%>

<div class="card card-info">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%if policy(XmlFile).write?%>
          <%= link_to read_xml_files_xml_files_path, class: "btn btn-sm btn-primary  mb-3 float-right" do %>
            <em class="fas fa-sync"></em> Sync XML Files
          <%end%>
        <% end -%>
        <div id="xml_files">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>S.No</th>
                <th>File Name</th>
                <th>File Path</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%if @xml_files.present?%>
                <%@i = current_page * AppConstants::RECORDS_PER_PAGE%>
                <% @xml_files.each do |xml_file| %>
                  <%= render xml_file %>
                <% end %>
              <%else%>
                <td colspan="4" class="text-danger text-center">No XML Files found!</td>
              <%end%>
            </tbody>
          </table>
          <%= paginate @xml_files, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
        </div>
      </div>
    </div>
  </div>
</div>
