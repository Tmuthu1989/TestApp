<%page_name "Roles"%>

<div class="card card-info m-0">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%if policy(Role).write?%>
          <%= link_to new_role_path, class: "btn btn-sm btn-primary  mb-3 float-right" do %>
            <em class="fas fa-plus"></em> New Role
          <%end%>
        <% end -%>
        <h3>Roles</h3>
      </div>
      <div class="col-12 mb-2">
        <table class="table table-bordered table-striped mb-3">
          <thead>
            <tr>
              <th width="5%">S.No</th>
              <th width="80%">Name</th>
              <th width=""></th>
            </tr>
          </thead>
          <tbody>
            <%if @roles.present?%>
              <%@roles.each_with_index do |role, i|%>
                <tr>
                  <td><%= i+1%></td>
                  <td><%= role.name%></td>
                  <td>
                    <%if policy(Role).write?%>
                      <%= link_to edit_role_path(role), class: "btn btn-warning" do %>
                        <i class="fas fa-edit" aria-hidden="true"></i>
                      <% end -%>
                    <%end%>
                    <%if policy(Role).write?%>
                      <%= link_to role, method: :delete, data: {confirm: "Are you sure you want to delete this role?"}, class: "btn btn-danger" do %>
                        <i class="fas fa-trash" aria-hidden="true"></i>
                      <% end -%>
                    <%end%>
                  </td>
                </tr>
              <%end%>
            <%else%>
              <tr>
                <td colspan="6" class="text-danger text-center"><h4>No Roles Found!</h4></td>
              </tr>
            <% end -%>
            
          </tbody>
        </table>
        <%= paginate @roles, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
      </div>
    </div>
  </div>
</div>
