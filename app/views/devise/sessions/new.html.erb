
<div class="wrapper">
  <div class="block-center mt-4 wd-xl">
    <!-- START card-->
    <div class="card card-flat">
      <div class="card-header text-center bg-default"><a href="#"><img class="block-center rounded" src="/logo.jpg" alt="Image"></a></div>
      <div class="card-body">
        <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mb-3", id: "loginForm"}) do |f| %>
        <div class="form-group">
          <div class="input-group with-focus"><%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control border-right-0', required: true, placeholder: "Email" %>
            <div class="input-group-append"><span class="input-group-text text-muted bg-transparent border-left-0"><em class="fa fa-envelope"></em></span></div>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group with-focus"><%= f.password_field :password, autocomplete: 'current-password', class: 'form-control border-right-0', required: true, id: "password", placeholder: "Password" %>
            <div class="input-group-append"><span class="input-group-text text-muted bg-transparent border-left-0"><em class="fa fa-eye" id="eye"></em></span></div>
          </div>
        </div>
        <div class="clearfix">
          <div class="checkbox c-checkbox float-left mt-0"><label><%= f.check_box :remember_me, class: 'form-check-input' %><span class="fa fa-check"></span> Remember Me</label></div>
        </div><button class="btn btn-block btn-primary mt-3" type="submit">Login</button>
        <% end -%>
        <%= render 'devise/shared/links' %>
      </div>
    </div><!-- END card-->
    <div class="p-3 text-center"><span class="mr-2">&copy;</span><span><%= Date.today.year%></span><span class="mr-2">-</span><span>Jungo</span><br><span>All rights reserved</span></div>
  </div>
</div>
<style>
  .input-group-append:focus {
    border-color: #66afe9 !important;
}
</style>
<script>
  const passwordInput = document.querySelector("#password")
  const eye = document.querySelector("#eye")
  eye.addEventListener("click", function(){
    this.classList.toggle("fa-eye-slash")
    const type = passwordInput.getAttribute("type") === "password" ? "text" : "password"
    passwordInput.setAttribute("type", type)
  })
</script>