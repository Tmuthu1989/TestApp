<%page_name "Posts"%>

<div class="card card-info">
  <div class="card-body">
    
    <div id="posts">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <%= render post %>
          <% end %>
          
        </tbody>
      </table>
    </div>

    <%= link_to "New post", new_post_path %>

  </div>
</div>
