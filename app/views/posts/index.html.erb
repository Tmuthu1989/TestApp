<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table class="table table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
      
    </tbody>
  </table>
</div>

<%= link_to "New post", new_post_path %>
