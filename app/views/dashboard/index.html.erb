<%page_name "Dashboard"%>
<div class="row">
  <div class="col-xl-4 col-md-6">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-primary-dark justify-content-center rounded-left"><em class="fas fa-file-code fa-3x"></em></div>
      <div class="col-8 py-3 bg-primary rounded-right">
        <a href="<%= xml_files_path%>">
          <div class="h2 mt-0 text-white"><%= "#{XmlFile.success.count}/#{XmlFile.count}"%></div>
          <div class="text-uppercase  text-white">XML Files</div>
        </a>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-md-6">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-purple-dark justify-content-center rounded-left"><em class="icon-settings fa-3x"></em></div>
      <div class="col-8 py-3 bg-purple rounded-right">
        <a href="<%= parts_path%>">
          <div class="h2 mt-0 text-white"><%= "#{Part.success.count}/#{Part.count}"%></div>
          <div class="text-uppercase text-white">Parts</div>
        </a>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-green-dark justify-content-center rounded-left"><em class="icon-bubbles fa-3x"></em></div>
      <div class="col-8 py-3 bg-green rounded-right">
        <a href="<%= bom_headers_path%>">
          <div class="h2 mt-0 text-white"><%= "#{BomHeader.success.count}/#{BomHeader.count}"%></div>
          <div class="text-uppercase text-white">BOMs</div>
        </a>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-warning-dark justify-content-center rounded-left"><em class="fas fa-file fa-3x"></em></div>
      <div class="col-8 py-3 bg-warning rounded-right">
        <a href="<%= documents_path%>">
          <div class="h2 mt-0 text-white"><%= "#{Document.success.count}/#{Document.count}"%></div>
          <div class="text-uppercase text-white">Documents</div>
        </a>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-info-dark justify-content-center rounded-left"><em class="icon-cloud-upload fa-3x"></em></div>
      <div class="col-8 py-3 bg-info rounded-right">
        
          <div class="h2 mt-0 text-white"><%= "#{DocumentUpload.success.count}/#{DocumentUpload.count}"%></div>
          <div class="text-uppercase text-white">Document Uploads</div>
        
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-info-dark justify-content-center rounded-left"><em class="icon-cloud-upload fa-3x"></em></div>
      <div class="col-8 py-3 bg-info rounded-right">
        
          <div class="h2 mt-0 text-white"><%= User.count%></div>
          <div class="text-uppercase text-white">Users</div>
        
      </div>
    </div>
  </div>
</div>
<style>
  a {
    text-decoration: none !important;
  }
</style>