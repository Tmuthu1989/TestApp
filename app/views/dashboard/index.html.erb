<%page_name "Dashboard"%>
<div class="row">
  <div class="col-xl-2 col-md-6">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-primary-dark justify-content-center rounded-left"><em class="fas fa-file-code fa-3x"></em></div>
      <div class="col-8 py-3 bg-primary rounded-right">
        <div class="h2 mt-0"><%= "#{XmlFile.success.count}/#{XmlFile.count}"%></div>
        <div class="text-uppercase">XML Files</div>
      </div>
    </div>
  </div>
  <div class="col-xl-2 col-md-6">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-purple-dark justify-content-center rounded-left"><em class="icon-settings fa-3x"></em></div>
      <div class="col-8 py-3 bg-purple rounded-right">
        <div class="h2 mt-0"><%= "#{Part.success.count}/#{Part.count}"%></div>
        <div class="text-uppercase">Parts</div>
      </div>
    </div>
  </div>
  <div class="col-xl-2 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-green-dark justify-content-center rounded-left"><em class="icon-bubbles fa-3x"></em></div>
      <div class="col-8 py-3 bg-green rounded-right">
        <div class="h2 mt-0"><%= "#{BomHeader.success.count}/#{BomHeader.count}"%></div>
        <div class="text-uppercase">BOMs</div>
      </div>
    </div>
  </div>
  <div class="col-xl-2 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-warning-dark justify-content-center rounded-left"><em class="fas fa-file fa-3x"></em></div>
      <div class="col-8 py-3 bg-warning rounded-right">
        <div class="h2 mt-0"><%= "#{Document.success.count}/#{Document.count}"%></div>
        <div class="text-uppercase">Documents</div>
      </div>
    </div>
  </div>
  <div class="col-xl-2 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-info-dark justify-content-center rounded-left"><em class="icon-cloud-upload fa-3x"></em></div>
      <div class="col-8 py-3 bg-info rounded-right">
        <div class="h2 mt-0"><%= "#{DocumentUpload.success.count}/#{DocumentUpload.count}"%></div>
        <div class="text-uppercase">Document Uploads</div>
      </div>
    </div>
  </div>
  <div class="col-xl-2 col-lg-6 col-md-12">
    <!-- START card-->
    <div class="card flex-row align-items-center align-items-stretch border-0">
      <div class="col-4 d-flex align-items-center bg-info-dark justify-content-center rounded-left"><em class="icon-cloud-upload fa-3x"></em></div>
      <div class="col-8 py-3 bg-info rounded-right">
        <div class="h2 mt-0"><%= User.count%></div>
        <div class="text-uppercase">Users</div>
      </div>
    </div>
  </div>
</div>